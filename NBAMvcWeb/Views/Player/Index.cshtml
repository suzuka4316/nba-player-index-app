@model IReadOnlyCollection<Player>

<h1>NBA Player - Index</h1>
<hr />
<a asp-action="Create" class="btn btn-primary">+ Add NBA Player</a>
<hr />
<table class="table" style="height:600px">
    <thead>
        <tr><th>Id</th><th>First name</th><th>Last name</th><th>Links</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.FirstName</td>
                <td>@p.LastName</td>

                <td>
                    <div class="rud-btns">
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@p.Id">Details</a>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>